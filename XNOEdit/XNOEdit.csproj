<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <PublishAot>true</PublishAot>
        <InvariantGlobalization>true</InvariantGlobalization>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Pfim" Version="0.11.3" />
      <PackageReference Include="Silk.NET.Input" Version="2.22.0" />
      <PackageReference Include="Silk.NET.OpenGL" Version="2.22.0" />
      <PackageReference Include="Silk.NET.OpenGL.Extensions.ImGui" Version="2.22.0" />
      <PackageReference Include="Silk.NET.Windowing" Version="2.22.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Marathon/Marathon\Marathon.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Shaders\BasicModel.vert" />
        <EmbeddedResource Include="Shaders\BasicModel.frag" />
        <EmbeddedResource Include="Shaders\Grid.vert" />
        <EmbeddedResource Include="Shaders\Grid.frag" />
        <EmbeddedResource Include="Shaders\Skybox.vert" />
        <EmbeddedResource Include="Shaders\Skybox.frag" />
    </ItemGroup>

</Project>
